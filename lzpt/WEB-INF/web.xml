<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" id="WebApp_ID" version="2.5">
  <display-name>
		廉政建设综合管理平台
    </display-name>
  <welcome-file-list>
    <welcome-file>
			index.html
        </welcome-file>
  </welcome-file-list>
  
  <filter>
        <filter-name>
			loginFilter
        </filter-name>
        <filter-class>
			com.kteam.lzpt.web.util.LoginFilter
        </filter-class>
    </filter>

    <filter-mapping>
        <filter-name>
			loginFilter
        </filter-name>
        <url-pattern>
			*.action
        </url-pattern>
    </filter-mapping>
  
  
  
  <filter>
    <filter-name>struts2</filter-name>
    <filter-class>
			org.apache.struts2.dispatcher.ng.filter.StrutsPrepareAndExecuteFilter
        </filter-class>
         <init-param>  
            <param-name>actionPackages</param-name>  
            <param-value>com.kteam.lzpt.web.action</param-value>  
        </init-param>  
  </filter>
  <filter-mapping>
    <filter-name>struts2</filter-name>
    <url-pattern>
			*.action
        </url-pattern>
  </filter-mapping>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>
				*.jsp
            </url-pattern>
      <page-encoding>UTF-8</page-encoding>
    </jsp-property-group>
  </jsp-config>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>
			/WEB-INF/classes/com/kteam/lzpt/resource/applicationContext-*.xml
        </param-value>
  </context-param>
  <context-param>
    <param-name>log4jConfigLocation</param-name>
    <param-value>
			/WEB-INF/classes/log4j.properties
        </param-value>
  </context-param>
  <context-param>
    <param-name>log4jRefreshInterval</param-name>
    <param-value>
			60000
        </param-value>
  </context-param>
  <listener>
    <listener-class>
            org.springframework.web.util.Log4jConfigListener  
        </listener-class>
  </listener>
  <listener>
    <listener-class>
			org.springframework.web.context.ContextLoaderListener
        </listener-class>
  </listener>
  <filter>
    <filter-name>Spring character encoding filter</filter-name>
    <filter-class>
			org.springframework.web.filter.CharacterEncodingFilter
        </filter-class>
    <init-param>
      <param-name>encoding</param-name>
      <param-value>
				UTF-8
            </param-value>
    </init-param>
  </filter>
  <filter-mapping>
    <filter-name>Spring character encoding filter</filter-name>
    <url-pattern>/*</url-pattern>
  </filter-mapping>
  <filter>
    <filter-name>hibernateFilter</filter-name>
    <filter-class>
			org.springframework.orm.hibernate3.support.OpenSessionInViewFilter
        </filter-class>
  </filter>
  <filter-mapping>
    <filter-name>hibernateFilter</filter-name>
    <url-pattern>*.action</url-pattern>
  </filter-mapping>
  <context-param>
    <param-name>initConfigLocation</param-name>
    <param-value>
			/com/kteam/lzpt/resource/init.xml
        </param-value>
  </context-param>
  <context-param>
    <param-name>menuConfigLocation</param-name>
    <param-value>
			/com/kteam/lzpt/resource/menu.xml
        </param-value>
  </context-param>
  <listener>
    <listener-class>com.kteam.lzpt.web.util.InitListener</listener-class>
  </listener>
</web-app>